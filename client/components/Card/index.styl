.row.cards
  border-color: $white
  border-style: solid
  border-width: 1px 0 1px 0

.content-card
  box-sizing: border-box
  border-left: 1px solid $white
  float: left
  padding: 50px 20px
  text-align: center
  width: 50%
  &:first-child
    border: none

  h3
    color: #0698d6
    set-font-size(26px)
    margin-bottom: remify(15px)

  a
    background: $white
    border-radius: 3px
    color: #0698d6
    display: inline-block
    font-weight: bold
    padding: 10px 40px
    text-decoration: none
    &:hover,&:focus
      background: #0698d6
      color: $white

  img
    margin-bottom: 15px
    max-width: 100%

  p
    margin: 0 0 15px
