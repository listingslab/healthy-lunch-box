.react-tabs

  .ReactTabs__TabList
    background: #f3f2ec
    .ReactTabs__Tab--selected
      border-bottom: 6px solid #0096d6

  .ReactTabs__TabPanel
    margin: auto
    max-width: 960px

    > div
      color: #747679
      margin-bottom: 20px

      h2
        font-size: 42px
        text-align: center

  ul
    margin-bottom: 25px
    text-align: center
    li
      display: inline-block
      font-size: 12px
      line-height: 24px
      margin: 0 25px
      text-align: center
      vertical-align: top
      
      img
        display: block
        margin: 0 auto 10px
        max-width: 100%
        min-height: 80px

    img
      margin-top: 5px
