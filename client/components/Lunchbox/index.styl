.flex-grid
  display: flex
  flex-wrap: wrap

.col
  box-sizing: border-box
  flex: 0 0 auto
  padding: 20px
  &.col-xs-4
    flex-basis : 33.33%
    max-width: 33.33%
  &.col-xs-6
    flex-basis: 50%
  &.col-xs-12
    flex-basis: 100%


.lunchbox
  img
    max-width: 200px


.food
  text-align: center

  button
    display: block
    margin: auto
