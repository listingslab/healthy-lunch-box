.lunchbox
  background: url(images/lunchbox.png) no-repeat center
  height: 375px;
  margin: 15px auto 15px;
  position: relative;
  width: 508px;

  .bottle
    bottom: 0
    max-height: 175px
    position: absolute
    right: -65px

  .f
    bottom: 56px
    left: 33px
    overflow: hidden
    position: absolute
    right: 33px
    top: 87px

    div
      height: 120px
      display: flex
      float: left
      justify-content: center
      padding-top: 3px
      text-align: center
      width: 50%

      img
        max-height: 105px
        max-width: 100%

      &.lunchbox__fruits, &.lunchbox__meatsandalternatives, &.lunchbox__dairy
        width: 33%


.completed
  left: 42%
  position: absolute
  top: 30%
