.row.info
  background: #fff
  padding: 20px 0 50px

.react-tabs
  margin: 20px 0
  ul
    margin-bottom: 25px
    text-align: center
    li
      display: inline-block
      margin: 0 10px
      vertical-align: top
      span
        background: #4d90d7
        border: 4px solid #fff
        border-radius: 50%
        display: block
        height: 80px
        width: 80px
      &.ReactTabs__Tab--selected
        span
          background: #00447e
    img
      margin-top: 5px

.ReactTabs__TabPanel
  padding: 20px 0
  h2
    margin-bottom: 20px

  img
    float: left
    margin-right: 15px
    max-width: 300px
