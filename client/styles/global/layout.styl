html
  font-size: 100%
  min-height: 100%

body
  background: linear-gradient(to bottom, #f0fbf1 0%,#d9ebf4 100%)
  color: $grey
  font-family: 'Open Sans', sans-serif;
  set-font-size(14px)


  h1, h2, h3, h4
    font-family: 'Baloo', sans-serif

.row
  background: $white
  overflow: hidden
  &.alt
    background: #f3f2ec

.container
  margin: auto
  max-width: 960px
